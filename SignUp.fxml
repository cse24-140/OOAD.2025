<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>

<Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="600.0" prefWidth="480.0"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="SignUpController">

   <children>
      <!-- Title -->
      <Label layoutX="100.0" layoutY="30.0" text="Orange Bank Of Botswana"
             style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #e17000;"/>
      <Label layoutX="180.0" layoutY="70.0" text="Sign Up"
             style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

      <!-- Input Labels -->
      <Label layoutX="60.0" layoutY="110.0" text="Customer ID:"/>
      <Label layoutX="60.0" layoutY="160.0" text="First Names:"/>
      <Label layoutX="60.0" layoutY="210.0" text="Last Name:"/>
      <Label layoutX="60.0" layoutY="260.0" text="Username:"/>
      <Label layoutX="60.0" layoutY="310.0" text="Password:"/>
      <Label layoutX="60.0" layoutY="360.0" text="Confirm Password:"/>

      <!-- Input Fields -->
      <TextField fx:id="txtCustomerID" layoutX="180.0" layoutY="105.0" prefWidth="200.0"/>
      <TextField fx:id="txtFirstNames" layoutX="180.0" layoutY="155.0" prefWidth="200.0"/>
      <TextField fx:id="txtLastName" layoutX="180.0" layoutY="205.0" prefWidth="200.0"/>
      <TextField fx:id="txtUsername" layoutX="180.0" layoutY="255.0" prefWidth="200.0"/>
      <TextField fx:id="txtPassword" layoutX="180.0" layoutY="305.0" prefWidth="200.0"/>
      <TextField fx:id="txtConfirmPassword" layoutX="180.0" layoutY="355.0" prefWidth="200.0"/>

      <!-- Buttons -->
      <Button fx:id="btnCreateAccount" layoutX="100.0" layoutY="440.0"
              prefWidth="120.0" text="Create Account"
              onAction="#handleCreateAccount"/>

      <Button fx:id="btnBackToLogin" layoutX="250.0" layoutY="440.0"
              prefWidth="120.0" text="Back to Login"
              onAction="#handleBackToLogin"/>
   </children>
</Pane>
