<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ManageAccountController">

   <children>
      <!-- TextArea for Orange Bank of Botswana -->
      <TextArea fx:id="txtOrangeBankOfBotswana" layoutX="14.0" layoutY="14.0" prefHeight="40.0" prefWidth="362.0" />

      <!-- TextArea for Manage Accounts -->
      <TextArea fx:id="txtManageAccounts" layoutX="14.0" layoutY="70.0" prefHeight="200.0" prefWidth="362.0" />

      <!-- Cash Withdrawal Button -->
      <Button fx:id="txtCashWithdrawl" layoutX="14.0" layoutY="290.0" mnemonicParsing="false" onAction="#handleCashWithdrawl" prefHeight="25.0" prefWidth="150.0" text="Cash Withdrawal" />

      <!-- Investment Button -->
      <Button fx:id="btnInvestment" layoutX="174.0" layoutY="290.0" mnemonicParsing="false" onAction="#handleInvestment" prefHeight="25.0" prefWidth="150.0" text="Investment" />

      <!-- Deposit Button -->
      <Button fx:id="btnDeposit" layoutX="14.0" layoutY="325.0" mnemonicParsing="false" onAction="#handleDeposit" prefHeight="25.0" prefWidth="150.0" text="Deposit" />

      <!-- Back Button -->
      <Button fx:id="btnBack" layoutX="174.0" layoutY="325.0" mnemonicParsing="false" onAction="#handleBack" prefHeight="25.0" prefWidth="150.0" text="Back" />
   </children>
</AnchorPane>