<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="400.0"
            xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="LoginController"
            style="-fx-background-color: linear-gradient(to bottom right, #ff8c00, #ffd27f);">

    <children>
        <!-- White Card -->
        <VBox layoutX="50.0" layoutY="60.0" spacing="20"
              alignment="CENTER"
              prefWidth="300" prefHeight="280"
              style="-fx-background-color: rgba(255,255,255,0.9);
                     -fx-background-radius: 15;
                     -fx-padding: 25;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 2);">

            <Label text="Orange Bank Of Botswana"
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #ff8c00;" />

            <Separator />

            <Label text="Customer Login" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333;"/>

            <VBox spacing="8" alignment="CENTER_LEFT">
                <Label text="Customer ID:" style="-fx-font-size: 14px; -fx-text-fill: #333;"/>
                <TextField fx:id="txtUsername" prefHeight="35.0" prefWidth="220.0"
                           promptText="Enter your Customer ID"/>
            </VBox>

            <VBox spacing="8" alignment="CENTER_LEFT">
                <Label text="Password:" style="-fx-font-size: 14px; -fx-text-fill: #333;"/>
                <PasswordField fx:id="txtPassword" prefHeight="35.0" prefWidth="220.0"
                               promptText="Enter your password"/>
            </VBox>

            <VBox spacing="15" alignment="CENTER">
                <Button fx:id="btnLogin" text="Login"
                        onAction="#handleLogin"
                        style="-fx-font-size: 14px; -fx-background-color: #ff8c00;
                               -fx-text-fill: white; -fx-background-radius: 10;"
                        prefHeight="35.0" prefWidth="120.0" />

                <Label text="Don't have an account?" style="-fx-font-size: 12px; -fx-text-fill: #333;" />

                <Button fx:id="btnSignUp" text="Sign Up Now"
                        onAction="#handleSignUp"
                        style="-fx-font-size: 12px; -fx-background-color: #333;
                               -fx-text-fill: white; -fx-background-radius: 8;"
                        prefHeight="30.0" prefWidth="100.0" />
            </VBox>

            <!-- Login Instructions -->
            <VBox spacing="5" style="-fx-padding: 10 0 0 0;">
                <Label text="Demo Login Instructions:" style="-fx-font-size: 10px; -fx-font-weight: bold; -fx-text-fill: #666;"/>
                <Label text="Customer ID: CUST001 or CUST002" style="-fx-font-size: 10px; -fx-text-fill: #666;"/>
                <Label text="Password: Use Customer ID as password" style="-fx-font-size: 10px; -fx-text-fill: #666;"/>
            </VBox>
        </VBox>
    </children>
</AnchorPane>