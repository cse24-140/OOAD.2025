<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="400.0"
            xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="LoginController"
            style="-fx-background-color: linear-gradient(to bottom right, #ff8c00, #ffd27f);">

    <children>
        <!-- White Card -->
        <VBox layoutX="50.0" layoutY="60.0" spacing="15"
              alignment="CENTER"
              prefWidth="300" prefHeight="280"
              style="-fx-background-color: rgba(255,255,255,0.9);
                     -fx-background-radius: 15;
                     -fx-padding: 20;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 2);">

            <Label text="Orange Bank Of Botswana"
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #ff8c00;" />

            <Label text="Customer Type:" style="-fx-font-size: 14px; -fx-text-fill: #333;"/>
            <ComboBox fx:id="cmbCustomerType" prefHeight="25.0" prefWidth="200.0" />

            <Label text="Username:" style="-fx-font-size: 14px; -fx-text-fill: #333;"/>
            <TextField fx:id="txtUsername" prefHeight="25.0" prefWidth="200.0" />

            <Label text="Password:" style="-fx-font-size: 14px; -fx-text-fill: #333;"/>
            <PasswordField fx:id="txtPassword" prefHeight="25.0" prefWidth="200.0" />

            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="btnLogin" text="Login"
                        onAction="#handleLogin"
                        style="-fx-font-size: 14px; -fx-background-color: #ff8c00;
                               -fx-text-fill: white; -fx-background-radius: 10;"
                        prefHeight="30.0" prefWidth="120.0" />
                <Button fx:id="btnGoToSignUp" text="Sign Up"
                        onAction="#handleGoToSignUp"
                        style="-fx-font-size: 14px; -fx-background-color: #333;
                               -fx-text-fill: white; -fx-background-radius: 10;"
                        prefHeight="30.0" prefWidth="80.0" />
            </HBox>

            <Label text="Don't have an account?" style="-fx-font-size: 12px; -fx-text-fill: #333;" />
        </VBox>
    </children>
</AnchorPane>
