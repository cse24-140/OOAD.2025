<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>

<Pane fx:controller="SignUpController"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      prefHeight="580.0" prefWidth="482.0">

   <children>
      <Label layoutX="130.0" layoutY="60.0" text="Orange Bank Of Botswana" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
      <Label layoutX="190.0" layoutY="110.0" text="Sign Up" style="-fx-font-size: 16px;"/>

      <Label layoutX="64.0" layoutY="160.0" text="Customer ID:"/>
      <TextField fx:id="txtCustomerId" layoutX="180.0" layoutY="155.0" prefHeight="30.0" prefWidth="176.0"/>

      <Label layoutX="64.0" layoutY="205.0" text="First Names:"/>
      <TextField fx:id="txtFirstNames" layoutX="180.0" layoutY="200.0" prefHeight="30.0" prefWidth="176.0"/>

      <Label layoutX="64.0" layoutY="250.0" text="Last Name:"/>
      <TextField fx:id="txtLastName" layoutX="180.0" layoutY="245.0" prefHeight="30.0" prefWidth="176.0"/>

      <Label layoutX="64.0" layoutY="295.0" text="Username:"/>
      <TextField fx:id="txtUsername" layoutX="180.0" layoutY="290.0" prefHeight="30.0" prefWidth="176.0"/>

      <Label layoutX="64.0" layoutY="340.0" text="Password:"/>
      <TextField fx:id="txtPassword" layoutX="180.0" layoutY="335.0" prefHeight="30.0" prefWidth="176.0"/>

      <Label layoutX="64.0" layoutY="385.0" text="Confirm Password:"/>
      <TextField fx:id="txtConfirmPassword" layoutX="180.0" layoutY="380.0" prefHeight="30.0" prefWidth="176.0"/>

      <Button fx:id="btnCreateAccount"
              layoutX="130.0" layoutY="440.0"
              prefHeight="40.0" prefWidth="214.0"
              text="Create Account"
              onAction="#handleCreateAccount"/>
   </children>
</Pane>
