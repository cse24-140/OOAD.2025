<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="500.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ViewAccountsController"
            style="-fx-background-color: linear-gradient(to bottom right, #ff8c00, #ffffff);">

   <!-- Header -->
   <Label layoutX="180.0" layoutY="20.0"
          text="Orange Bank Of Botswana - Account Management"
          style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #ff8c00;" />

   <!-- Main Content Container -->
   <VBox layoutX="50.0" layoutY="70.0" prefWidth="500" prefHeight="400"
         alignment="TOP_CENTER" spacing="15"
         style="-fx-background-color: rgba(255,255,255,0.95); -fx-background-radius: 15;
                 -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 10, 0, 0, 2);">

      <!-- Account Information Display -->
      <Label text="Your Account Summary"
             style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333;" />

      <TextArea fx:id="txtViewAccounts" prefWidth="450" prefHeight="150"
                editable="false" wrapText="true"
                style="-fx-font-family: 'Monospaced'; -fx-font-size: 12px;" />

      <Separator />

      <Label text="Account Actions"
             style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333;" />

      <!-- Action Buttons -->
      <HBox spacing="15" alignment="CENTER">
         <Button fx:id="btnCashWithdrawl" text="Cash Withdrawal"
                 onAction="#handleCashWithdrawl"
                 style="-fx-font-size: 14px; -fx-background-color: #ff8c00; -fx-text-fill: white; -fx-background-radius: 10;"
                 prefWidth="140" prefHeight="35" />

         <Button fx:id="btnInvestment" text="Investment"
                 onAction="#handleInvestment"
                 style="-fx-font-size: 14px; -fx-background-color: #ff8c00; -fx-text-fill: white; -fx-background-radius: 10;"
                 prefWidth="140" prefHeight="35" />

         <Button fx:id="btnDeposit" text="Deposit"
                 onAction="#handleDeposit"
                 style="-fx-font-size: 14px; -fx-background-color: #ff8c00; -fx-text-fill: white; -fx-background-radius: 10;"
                 prefWidth="140" prefHeight="35" />
      </HBox>

      <Button fx:id="btnBack" text="Back to Dashboard"
              onAction="#handleBack"
              style="-fx-font-size: 14px; -fx-background-color: black; -fx-text-fill: white; -fx-background-radius: 10;"
              prefWidth="200" prefHeight="35" />
   </VBox>
</AnchorPane>