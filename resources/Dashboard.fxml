<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="900.0"
            style="-fx-background-color: linear-gradient(to bottom right, #ff8c00, #ffffff);"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.DashboardController">

   <!-- HEADER -->
   <VBox alignment="CENTER" prefHeight="80" prefWidth="900"
         style="-fx-background-color: black; -fx-padding: 15;">
      <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;"
             text="Orange Bank of Botswana" />
      <Label fx:id="lblCustomerInfo" style="-fx-font-size: 14px; -fx-text-fill: #ff8c00;"
             text="Welcome to Your Banking Dashboard" />
   </VBox>

   <!-- MAIN CONTENT -->
   <VBox alignment="TOP_CENTER" layoutX="250" layoutY="100"
         prefHeight="400" prefWidth="400" spacing="15"
         style="-fx-background-color: rgba(255,255,255,0.95); -fx-background-radius: 15;
                -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 10, 0, 0, 2);">

      <Label fx:id="lblWelcome" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #ff8c00;"
             text="Welcome, User!" />

      <Separator/>

      <!-- Account Summary -->
      <VBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10;">
         <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333;"
                text="Account Summary" />
         <Label fx:id="lblTotalBalance" style="-fx-font-size: 14px; -fx-text-fill: #333;"
                text="Total Balance: BWP 0.00" />
         <Label fx:id="lblAccountCount" style="-fx-font-size: 12px; -fx-text-fill: #666;"
                text="Accounts: 0" />
      </VBox>

      <Separator/>

      <!-- Banking Actions Grid -->
      <GridPane alignment="CENTER" hgap="10" vgap="10">
         <columnConstraints>
            <ColumnConstraints prefWidth="200"/>
            <ColumnConstraints prefWidth="200"/>
         </columnConstraints>

         <!-- Row 1 -->
         <Button fx:id="btnOpenAccount" onAction="#handleOpenAccount" prefHeight="40" prefWidth="190"
                 style="-fx-font-size: 12px; -fx-background-color: #ff8c00; -fx-text-fill: white; -fx-background-radius: 8;"
                 text="Open New Account" GridPane.columnIndex="0" GridPane.rowIndex="0"/>

         <Button fx:id="btnManageAccounts" onAction="#handleManageAccounts" prefHeight="40" prefWidth="190"
                 style="-fx-font-size: 12px; -fx-background-color: #ff8c00; -fx-text-fill: white; -fx-background-radius: 8;"
                 text="Manage Accounts" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

         <!-- Row 2 -->
         <Button fx:id="btnDeposit" onAction="#handleDeposit" prefHeight="40" prefWidth="190"
                 style="-fx-font-size: 12px; -fx-background-color: #32CD32; -fx-text-fill: white; -fx-background-radius: 8;"
                 text="Deposit Funds" GridPane.columnIndex="0" GridPane.rowIndex="1"/>

         <Button fx:id="btnWithdraw" onAction="#handleWithdraw" prefHeight="40" prefWidth="190"
                 style="-fx-font-size: 12px; -fx-background-color: #FF4500; -fx-text-fill: white; -fx-background-radius: 8;"
                 text="Cash Withdrawal" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

         <!-- Row 3 -->
         <Button fx:id="btnViewBalance" onAction="#handleViewBalance" prefHeight="40" prefWidth="190"
                 style="-fx-font-size: 12px; -fx-background-color: #4169E1; -fx-text-fill: white; -fx-background-radius: 8;"
                 text="View Balance" GridPane.columnIndex="0" GridPane.rowIndex="2"/>

         <Button fx:id="btnTransactionHistory" onAction="#handleTransactionHistory" prefHeight="40" prefWidth="190"
                 style="-fx-font-size: 12px; -fx-background-color: #4169E1; -fx-text-fill: white; -fx-background-radius: 8;"
                 text="Transaction History" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

         <!-- Row 4 -->
         <Button fx:id="btnInvestment" onAction="#handleInvestment" prefHeight="40" prefWidth="190"
                 style="-fx-font-size: 12px; -fx-background-color: #8A2BE2; -fx-text-fill: white; -fx-background-radius: 8;"
                 text="Investment" GridPane.columnIndex="0" GridPane.rowIndex="3"/>

         <Button fx:id="btnApplyInterest" onAction="#handleApplyInterest" prefHeight="40" prefWidth="190"
                 style="-fx-font-size: 12px; -fx-background-color: #8A2BE2; -fx-text-fill: white; -fx-background-radius: 8;"
                 text="Apply Interest" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

         <rowConstraints>
            <RowConstraints/>
            <RowConstraints/>
            <RowConstraints/>
            <RowConstraints/>
         </rowConstraints>
      </GridPane>

      <Separator/>

      <!-- Logout Button -->
      <Button fx:id="btnLogOut" onAction="#handleLogOut" prefHeight="35" prefWidth="150"
              style="-fx-font-size: 14px; -fx-background-color: black; -fx-text-fill: white; -fx-background-radius: 10;"
              text="Log Out"/>

      <!-- FOOTER -->
      <Label style="-fx-font-size: 12px; -fx-text-fill: black;"
             text="Â© 2025 Orange Bank of Botswana - Secure Banking System"/>
   </VBox>
</AnchorPane>
