<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="450.0" prefWidth="500.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.DepositController"
            style="-fx-background-color: linear-gradient(to bottom right, #ff8c00, #ffffff);">

   <!-- White Card -->
   <VBox layoutX="70.0" layoutY="60.0" prefWidth="360" prefHeight="330"
         alignment="CENTER" spacing="20"
         style="-fx-background-color: rgba(255,255,255,0.95); -fx-background-radius: 15;
                 -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 10, 0, 0, 2);">

      <Label fx:id="txtOrangeBankOfBotswana" text="Orange Bank Of Botswana"
             style="-fx-font-size: 18px; -fx-text-fill: #ff8c00; -fx-font-weight: bold;" />

      <Separator prefWidth="300" />

      <Label text="Deposit Funds"
             style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333;" />

      <VBox spacing="10" alignment="CENTER_LEFT" prefWidth="300">
         <Label text="Select Account:" style="-fx-font-size: 14px; -fx-text-fill: #333;" />
         <ComboBox fx:id="cmbAccountType" prefWidth="300" />
      </VBox>

      <HBox alignment="CENTER_LEFT" spacing="10" prefWidth="300">
         <Label text="Amount:" style="-fx-font-size: 14px; -fx-text-fill: #333;" />
         <TextField fx:id="txtAmountField" prefWidth="150" promptText="BWP 0.00" />
      </HBox>

      <Button fx:id="btnConfirmDeposit" text="Confirm Deposit"
              onAction="#handleConfirmDeposit"
              style="-fx-font-size: 14px; -fx-background-color: #ff8c00; -fx-text-fill: white; -fx-background-radius: 10;"
              prefWidth="200" prefHeight="35" />

      <Button fx:id="btnBack" text="Back"
              onAction="#handleBack"
              style="-fx-font-size: 14px; -fx-background-color: black; -fx-text-fill: white; -fx-background-radius: 10;"
              prefWidth="200" prefHeight="35" />
   </VBox>
</AnchorPane>
