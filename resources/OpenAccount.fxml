<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="500.0" prefWidth="500.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.OpenAccountController"
            style="-fx-background-color: linear-gradient(to bottom right, #ff8c00, #ffffff);">

    <!-- White Card -->
    <VBox layoutX="70.0" layoutY="60.0" prefWidth="360" prefHeight="380"
          alignment="CENTER" spacing="20"
          style="-fx-background-color: rgba(255,255,255,0.95); -fx-background-radius: 15;
                 -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 10, 0, 0, 2);">

        <Label text="Orange Bank Of Botswana"
               style="-fx-font-size: 18px; -fx-text-fill: #ff8c00; -fx-font-weight: bold;" />

        <Separator />

        <Label text="Open New Account"
               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333;" />

        <VBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Account Type:" style="-fx-font-size: 14px; -fx-text-fill: #333;" />
            <ComboBox fx:id="cmbAccountType" prefWidth="200" />
        </VBox>

        <VBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Initial Deposit:" style="-fx-font-size: 14px; -fx-text-fill: #333;" />
            <TextField fx:id="txtInitialDeposit" prefWidth="200" promptText="BWP 0.00" />
        </VBox>

        <!-- Employer fields (only visible for Cheque accounts) -->
        <VBox spacing="10" alignment="CENTER_LEFT" fx:id="employerSection">
            <Label text="Employer:" style="-fx-font-size: 14px; -fx-text-fill: #333;" />
            <TextField fx:id="txtEmployer" prefWidth="200" promptText="Employer name" />
        </VBox>

        <VBox spacing="10" alignment="CENTER_LEFT" fx:id="employerAddressSection">
            <Label text="Employer Address:" style="-fx-font-size: 14px; -fx-text-fill: #333;" />
            <TextField fx:id="txtEmployerAddress" prefWidth="200" promptText="Employer address" />
        </VBox>

        <Label fx:id="lblMinBalance" text="Minimum deposit: BWP 0.00"
               style="-fx-font-size: 12px; -fx-text-fill: #666;" />

        <Button fx:id="btnOpenAccount" text="Open Account"
                onAction="#handleOpenAccount"
                style="-fx-font-size: 14px; -fx-background-color: #ff8c00; -fx-text-fill: white; -fx-background-radius: 10;"
                prefWidth="200" prefHeight="35" />

        <Button fx:id="btnBack" text="Back to Dashboard"
                onAction="#handleBack"
                style="-fx-font-size: 14px; -fx-background-color: black; -fx-text-fill: white; -fx-background-radius: 10;"
                prefWidth="200" prefHeight="35" />
    </VBox>
</AnchorPane>
